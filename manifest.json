{
  "stylesheets": [
    {
      "base": "vendor/stylesheets",
      "files": [
        "vendor/stylesheets/**/*.css"
      ]
    },
    {
      "base": "app/stylesheets",
      "files": [
        "app/stylesheets/main.scss",
        "app/stylesheets/**/*.scss"
      ]
    }
  ],

  "javascripts": [
    {
      "base": "vendor/javascripts",
      "files": [
        "vendor/javascripts/angular.js",
        "vendor/javascripts/**/*.js"
      ]
    },
    {
      "base": "app/javascripts",
      "files": [
        "app/javascripts/**/*.js"
      ]
    }
  ],

  "templates": [
    {
      "base": ".",
      "files": [
        "index.html"
      ]
    },
    {
      "base": "app",
      "files": [
        "app/templates/**/*.html"
      ]
    }
  ]
}
